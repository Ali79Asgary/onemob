<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/videoRelativeLayout"
    android:background="@drawable/gradient_selector"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="33.3"
        android:orientation="vertical"
        android:layout_marginLeft="340dp"
        android:layout_marginRight="10dp"
        android:id="@+id/showVideoLinearLayout">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/ic_videos"
            android:id="@+id/showVideoImageView" />


    </LinearLayout>


    <TextView
        android:id="@+id/lblVideoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:textColor="#000000"
        android:text="@string/video_name"
        android:textSize="20dp"
        android:textStyle="bold" />



</RelativeLayout>